<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rowLayout"
    app:cardElevation="3dp"
    >
    <!--app:cardCornerRadius="@dimen/cardview_radius"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/reserve_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="@dimen/text_padding"
            android:text="@string/generated_id"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUSTOMER NAME"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/font_size"
            android:textColor="@color/black"
            android:layout_below="@id/reserve_id"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="@dimen/text_padding"/>

        <TextView
            android:id="@+id/reserve_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESERVE DATE"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/font_size"
            android:textColor="@color/black"
            android:layout_below="@id/customer_name"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="@dimen/text_padding"/>

        <TextView
            android:id="@+id/room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROOM ID"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/font_size"
            android:textColor="@color/black"
            android:layout_below="@id/reserve_date"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="@dimen/text_padding"/>

        <TextView
            android:id="@+id/contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT NUMBER"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/font_size"
            android:textColor="@color/black"
            android:layout_below="@id/room_type"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="@dimen/text_padding"/>

        <TextView
            android:id="@+id/rectangle_box_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_box"
            android:layout_below="@id/contact_number"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="69dp"
            android:layout_height="73dp"
            android:layout_marginTop="35dp"
            android:background="@android:color/transparent"
            android:src ="@drawable/profile_picute" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>