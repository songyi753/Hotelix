<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hotelix_Application" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color.#33cccc -->
        <item name="colorPrimary">#009999</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Hotelix_Application.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="application_theme"> <!--  use this  for bg -->
        <item name="android:background">@color/bgColor</item>
    </style>

    <style name="search_view_theme">
        <item name="android:background">@color/white</item>
    </style>
</resources>